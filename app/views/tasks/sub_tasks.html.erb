<div>
  <h1>Tasks</h1>
  <%= render("search")%>
  <table class="table table-sttripe">
    <thead>
      <tr>
        <th width=10%>Index</th>
        <th width=30%>Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Edit</th>
      </tr>
    </thead>
    <%- @sub_tasks.each_with_index do |task, index| %>
    <tr>
      <td>index</td>
      <td><%= link_to task.name.to_s, task_path(task) %></td>
      <td>task.start_date</td>
      <td>task.end_date</td>
      <td><%= link_to "edit", edit_taks_path(task) %></td>
    </tr>
    <%- end %>
  </table>
  <%= link_to "add Sub Task", new_task_path, :remote => :true %>
  <%= link_to "back", tasks_path, :remote => :true%>
</div>

